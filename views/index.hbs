<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">搜尋餐廳</h4>
        <div class="input-group">
          <select class="form-select" id="sort" name="sort">
            <option value="name_en">字母排序：A > Z</option>
            <option value="-name_en">字母排序：Z > A</option>
            <option value="rating">評分：低 > 高</option>
            <option value="-rating">評分：高 > 低</option>
          </select>
          <input type="text" name="keyword" class="form-control" placeholder="請輸入餐廳或分類..."
            aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keyword }}" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>

        <h4 class="mt-3"><a href="/restaurants/new" class="btn btn-major">新增餐廳</a></h4>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}

        <div class="card mb-3">
          <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">

          <div class="card-body">
            <a href="/restaurants/{{ this._id }}" class="text-dark">
              <h6 class="card-title">{{ this.name }}</h6>
            </a>
            <div class="row justify-content-between">
              <div class="col-8">
                <div class="restaurant-category">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>
              </div>
              <div class="col-4">
                <div class='restaurant-rating badge rounded-pill bg-danger font-weight-normal'>
                  {{ this.rating }}
                  <i class="fa-solid fa-star fa-xs"></i>
                </div>
              </div>
            </div>
          </div>

          <div class="card-footer d-flex justify-content-end flex-wrap">
            <form action="/restaurants/{{this._id}}/edit?_method=GET" style="display: inline;">
              <button type="submit" class="btn btn-outline-primary btn-sm m-1">編輯餐廳</button>
            </form>
            <form action='./restaurants/{{this._id}}/delete?_method=DELETE' method='POST' style='display: inline;'>
              <button type="submit" class="btn btn-outline-danger btn-sm m-1">刪除餐廳</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>