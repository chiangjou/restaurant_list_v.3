<div class="row mt-5">
  <div class="col-md-10 m-auto">
    <div class="card card-body">
      <div class="container mt-5 mb-5">
        <h2 class="mb-5 restaurant-show-title">{{ restaurant.name }}</h2>

        <div class="row">
          <div class="col-12 col-md-10 mx-auto">

            <img class="rounded mx-auto d-block mb-4" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
              style="max-width: 100%; height: auto" />

            <p class="mb-3">
              <span class="text-secondary">
                <i class="fas fa-utensils pr-2"></i>
                類別：
              </span>
              {{ restaurant.category }}
            </p>

            <p class="mb-3">
              <span class="text-secondary">
                <i class="fas fa-map-marker-alt pr-2"></i>
                地址：
              </span>
              {{ restaurant.location }}
              <a href="{{ restaurant.google_map }}" class="text-danger" target="_blank">
                <i class="fas fa-location-arrow pr-2"></i>
              </a>
            </p>

            <p class="mb-3">
              <span class="text-secondary">
                <i class="fas fa-mobile-alt pr-2"></i>
                電話：
              </span>
              {{ restaurant.phone }}
            </p>

            <p class="mb-5">
              {{ restaurant.description }}
            </p>

            <div class="form-group row">
              <div class="col-sm-10 mt-5 text-center">
                <a href="/restaurants/{{ restaurant._id }}/edit">
                  <button class="btn btn-primary m-2">編輯餐廳</button>
                </a>

                <a href="/"><button class="btn btn-outline-secondary m-2">返回首頁</button></a>

                <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger m-2">刪除餐廳</button>
                </form>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>