<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-4">Login</h1>
      {{> message}}
      <div class="container mt-5 mb-5">
        <form action="/users/login" method="POST">
          <div class="mb-3">
            <label for="email" class="mb-2">Email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email">
          </div>
          <div class="mb-3">
            <label for="password" class="mb-2">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
          </div>

          <div class="d-flex justify-content-end flex-wrap">
            <button type="submit" class="btn btn-primary mt-4 me-3">Login</button>
            <a href="/auth/facebook" class="btn btn-outline-info btn-block mt-4">Facebook Login</a>
        </form>
      </div>

      <p class="lead mt-5"><strong>
        No Account? <a href="/users/register" style="color: blue;" class="m-2">Register</a></strong>
      </p>
    </div>
  </div>
</div>