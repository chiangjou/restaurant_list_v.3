<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">搜尋餐廳</h4>

        <div class="input-group">
          <select class="form-select" id="search-sort" name="search-sort">
            <option selected>請選擇...</option>
            <option value="name_en"><a class="dropdown-item" href="/ascend">字母：A -> Z</a></option>
            <option value="-name_en"><a class="dropdown-item" href="/descend">字母：Z -> A</a></option>
            <option value="location"><a class="dropdown-item" href="/sortByLocation">地點</a></option>
            <option value="category"></a></li>
              <li><a class="dropdown-item" href="sortByCategory">類別</a>
            </option>
          </select>

          <input type="text" name="keyword" class="form-control" placeholder="請輸入餐廳名稱或餐廳類別..."
            aria-label="Restaurant Name..." value="{{ keyword }}" aria-describedby="search-button">

          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>

      </form>
    </div>
  </div>
  <h4 class="mt-4"><a href="/restaurants/new" class="btn btn-major"><i class="fa-solid fa-plus"></i> 新增餐廳</a></h4>

</div>

