<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">

          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{ keyword }}" aria-describedby="search-button">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>

          <div class="input-group">
            <select class="form-select" id="sort" name="sort">
              <option value="name_en">A > Z</option>
              <option value="-name_en">Z > A</option>
              <option value="rating">評分(低至高)</option>
              <option value="-rating">評分(高至低)</option>
            </select>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h3 class="text-center" style="color: rgb(121, 8, 8);">Can not find the restaurant. </h3>
</div>